<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="#000000">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView13"
        android:id="@+id/textView22"
        android:layout_alignTop="@+id/textView13"
        android:textSize="28sp"
        android:textColor="@color/com_facebook_button_background_color_focused"
        android:layout_alignStart="@+id/textView11"
        android:layout_alignEnd="@+id/textView11"
        android:textAlignment="textEnd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:layout_below="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:textSize="28sp"
        android:textColor="@color/com_facebook_button_background_color_focused"
        android:layout_alignEnd="@+id/textView9"
        android:textAlignment="textStart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView25"
        android:layout_alignStart="@+id/textView25"
        android:id="@+id/textView29"
        android:textSize="28sp"
        android:textColor="@color/com_facebook_button_background_color_focused"
        android:layout_alignEnd="@+id/textView25"
        android:textAlignment="textEnd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView26"
        android:textSize="28sp"
        android:textColor="@color/com_facebook_button_background_color_focused"
        android:layout_below="@+id/textView24"
        android:textAlignment="textStart"
        android:layout_alignStart="@+id/textView13"
        android:layout_alignEnd="@+id/textView24" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView30"
        android:id="@android:id/list"/>

    <TextView
        android:text="Total Shares"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:id="@+id/textView24"
        android:textSize="28sp"
        android:textColor="@color/com_facebook_button_background_color_focused"
        android:layout_below="@+id/textView13"
        android:layout_alignStart="@+id/textView13"
        android:visibility="invisible" />

    <TextView
        android:text="Total Posts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:textSize="28sp"
        android:textColor="@color/com_facebook_button_background_color_focused"
        android:textAlignment="center"
        android:layout_above="@+id/textView22"
        android:layout_alignParentEnd="true"
        android:visibility="invisible" />

    <TextView
        android:text="Total Comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView25"
        android:textSize="28sp"
        android:textColor="@color/com_facebook_button_background_color_focused"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/textView24"
        android:layout_alignTop="@+id/textView24"
        android:layout_alignParentEnd="true"
        android:visibility="invisible" />

    <TextView
        android:text="Total Likes "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:id="@+id/textView9"
        android:textSize="28sp"
        android:textColor="@color/com_facebook_button_background_color_focused"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible" />

    <TextView
        android:text="RECENT POSTS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView30"
        android:textSize="30sp"
        android:textColor="@color/com_facebook_button_background_color_focused"
        android:padding="10dp"
        android:layout_below="@+id/textView29"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:visibility="invisible" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loadingPanel"
        android:layout_alignTop="@+id/textView30"
        android:layout_centerHorizontal="true" />

</RelativeLayout>



