<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/com_facebook_likeboxcountview_text_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView27"
            android:textSize="50sp"
            android:textColor="@color/com_facebook_button_background_color_focused"
            android:layout_marginTop="97dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:visibility="invisible" />

        <TextView
            android:text="This post can fetch upto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33dp"
            android:id="@+id/textView28"
            android:visibility="invisible"
            android:textSize="18sp"
            android:textColor="@color/com_facebook_button_background_color_focused" />

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pb"
            android:layout_alignBottom="@+id/textView27"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="START OVER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:elevation="18dp"
            style="@style/com_facebook_loginview_default_style"
            android:layout_marginTop="30dp"
            android:visibility="invisible"
            android:layout_below="@+id/textView27"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</LinearLayout>