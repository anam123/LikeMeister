<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textAppearance="@android:style/TextAppearance.Material.Widget.Toolbar.Title"
            android:text="ATTACHMENTS"
            android:textSize="30sp" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView7"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="54dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="52dp"
                android:layout_alignBottom="@+id/textInputLayout"
                android:layout_alignParentStart="true">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/tag"
                    android:inputType="number"
                    android:id="@+id/tags"
                    style="@android:style/Widget.Material.Light.EditText"
                    android:textAppearance="@style/TextAppearance.AppCompat.Notification.Title.Media" />
            </android.support.design.widget.TextInputLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/statt"
                android:inputType="textMultiLine"
                android:id="@+id/status"
                style="@android:style/Widget.Material.Light.EditText"
                android:textAppearance="@style/TextAppearance.AppCompat.Notification.Title.Media" />
        </android.support.design.widget.TextInputLayout>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox7"
            android:layout_marginBottom="31dp"
            android:capitalize="none"
            android:checked="false"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_above="@+id/textView7"
            android:layout_centerHorizontal="true"
            android:text="Is This A Profile Picture ?"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textView7"
            >

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="19dp"
                android:id="@+id/group"
                android:textAlignment="center"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true">

                <RadioButton
                    android:text="Image"
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:id="@+id/radioButton10"
                    android:layout_alignBottom="@+id/group"
                    android:layout_toEndOf="@+id/group"
                    android:layout_marginBottom="14dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:textSize="20sp" />

                <RadioButton
                    android:text="Video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton12"
                    android:layout_weight="1"
                    android:layout_alignTop="@+id/group"
                    android:layout_toEndOf="@+id/group"
                    android:padding="10dp"
                    android:textSize="20sp" />

                <RadioButton
                    android:text="Link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="41dp"
                    android:id="@+id/radioButton11"
                    android:layout_alignBaseline="@+id/radioButton12"
                    android:layout_alignBottom="@+id/radioButton12"
                    android:layout_alignParentEnd="true"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:textSize="20sp" />

            </RadioGroup>

            <Button
                android:text="PREDICT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                android:elevation="6dp"
                style="@style/com_facebook_button_share"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />



        </RelativeLayout>

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>